<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_get_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.grzegorzewski.customholdingsbuilder.GetLocationActivity">

    <TextView
        android:text="@string/get_location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/textView_get_location"
        android:textSize="36sp"
        android:textAlignment="center" />

    <TextView
        android:text="@string/location_label_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_get_location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:id="@+id/textView_location_label"
        android:textSize="22sp"
        android:textAlignment="center"
        android:fitsSystemWindows="false"
        android:textIsSelectable="false"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />

    <TextView
        android:text="@string/location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_location_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/textView_auto_this"
        android:textSize="24sp" />

    <TextView
        android:text="@string/spinner_label_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_auto_this"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/textView_spinner_label"
        android:textSize="22sp"
        android:textAlignment="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_spinner_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/state_spinner"
        android:soundEffectsEnabled="true"
        android:splitMotionEvents="true"
        android:textAlignment="center"
        android:scrollbarSize="25dp"
        android:minHeight="50dp"
        android:minWidth="150dp" />

    <Button
        android:text="@string/begin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:id="@+id/button" />

</RelativeLayout>
